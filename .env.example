# Clé API OpenAI - Remplacer par votre propre clé
OPENAI_API_KEY=votre_cle_api_openai_ici
# Mode IA - "openai" pour utiliser l'API OpenAI ou "local" pour utiliser Mistral 7B en local via Ollama
IA_MODE=openai
# URL de l'API Ollama (pour le mode local)
OLLAMA_API_URL=http://localhost:11434/api/generate

# Configuration des événements aléatoires
# Intervalle entre les événements (en nombre de ticks)
EVENEMENTS_INTERVALLE=3
# Probabilité qu'un événement se produise à chaque intervalle (0-100)
EVENEMENTS_PROBABILITE=75 